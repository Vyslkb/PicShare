
<%= simple_form_for(@filter,html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%f.full_error :image_file_size, class: " alert alert-error"%>
 <%f.full_error :image_content_type, class: " alert alert-error"%>

   <%= f.input :blur, label: "Blur",hint: 'enter number from 0 to 1' ,input_html: { min: '0', max: '1',step: '0.1',:style=> 'width: 70px' } %>

    <%= f.input :blueshift, label: "Blueshift",hint: 'enter number from 0 to 1' ,input_html: { min: '0', max: '1',step: '0.1',:style=> 'width: 70px' } %>

    <%= f.input :charcoal, label: "Charcoal",hint: 'enter number from 0 to 1',input_html: {min: '0', max: '1',step: '0.1',:style=> 'width: 70px'} %>

    <%= f.input :oilpaint, label: "Oilpaint",hint: 'enter number from 0 to 1', input_html: {min: '0', max: '1',step: '0.1',:style=> 'width: 70px'}%>

    <%= f.input :name, label: "Name",hint: 'Name of filter', input_html: {:style=> 'width: 100px'}%>



  <div class="form-group">
    <%= f.button :submit,class:"btn btn-primary" %>
  </div>
<% end %>
