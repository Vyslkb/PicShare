

<%= simple_form_for(@image, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%f.full_error :image_file_size, class: " alert alert-error"%>
 <%f.full_error :image_content_type, class: " alert alert-error"%>

   <%= f.input :photo, label: "Upload an Image"%>
    <%= f.input :description, as: :text, input_html: {:rows => "3"}, label: false %>
    



  <div class="form-group">
    <%= f.button :submit,class:"btn btn-primary" %>
  </div>
<% end %>
